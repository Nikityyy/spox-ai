# Deny access to all files by default
# Except images, PDFs and text files
<FilesMatch "\.(?i:jpe?g|png|gif|webp|pdf|txt)$">
    Require all granted
</FilesMatch>

# Explicitly deny access to script files
<FilesMatch "\.(?i:php|phtml|php3|php4|php5|php7|phps|pl|py|cgi|sh|asp|js|html|htm)$">
    Require all denied
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Disable PHP execution in this directory if mod_php is installed
<IfModule mod_php5.c>
    php_flag engine off
</IfModule>
<IfModule mod_php7.c>
    php_flag engine off
</IfModule>
<IfModule mod_php.c>
    php_flag engine off
</IfModule>
